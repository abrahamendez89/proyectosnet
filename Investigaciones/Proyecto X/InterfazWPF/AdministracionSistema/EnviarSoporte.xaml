<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:InterfazWPF="clr-namespace:InterfazWPF" x:Class="InterfazWPF.AdministracionSistema.EnviarSoporte"
        Title="Enviar a soporte" Height="300" Width="300" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Background="WhiteSmoke">
        <Image x:Name="img_fotoPantalla" Margin="10,28,10,85" OpacityMask="LightGray"/>
        <Label Content="Imagen capturada:" HorizontalAlignment="Left" Height="28" Margin="10,0,0,0" VerticalAlignment="Top" Width="115"/>

        <InterfazWPF:Boton x:Name="btn_enviar" Text="Enviar" Margin="0,0,10,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="69" MouseDown="btn_enviar_MouseDown"/>
        <TextBox x:Name="txt_comentarios" Margin="10,0,84,10" TextWrapping="Wrap" Text="" Height="44" VerticalAlignment="Bottom"/>
        <Label Content="Comentarios anexos:" HorizontalAlignment="Left" Margin="10,0,0,54" Width="127" Height="26" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
