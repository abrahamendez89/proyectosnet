<Window x:Class="Calisto.Sistema.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Margin="90,72,0,0" VerticalAlignment="Top" Width="75" Background="#FF783F3F" BorderThickness="5,1,1,1" BorderBrush="White" Foreground="White"/>
        <Rectangle Height="60" Margin="28,8,35,0" Stroke="Black" VerticalAlignment="Top" RadiusX="10" RadiusY="10">
        	<Rectangle.Fill>
        		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        			<GradientStop Color="Black" Offset="0"/>
        			<GradientStop Color="#FFFB1D1D" Offset="1"/>
        		</LinearGradientBrush>
        	</Rectangle.Fill>
        </Rectangle>

    </Grid>
</Window>
