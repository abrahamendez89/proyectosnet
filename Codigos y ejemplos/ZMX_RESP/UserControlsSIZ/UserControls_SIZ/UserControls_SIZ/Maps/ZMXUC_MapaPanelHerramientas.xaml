<UserControl x:Class="UserControlsSIZ.Maps.ZMXUC_MapaPanelHerramientas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControlsSIZ.Maps"
             xmlns:botontoolbar="clr-namespace:UserControlsSIZ.Toolbar"
             mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="5">
            <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                <botontoolbar:ToolbarBtn x:Name="btnAceptar" Icono="fa_check" DiametroPx="35" Margin="5" toolbarBtnClick="btnAceptar_toolbarBtnClick" ToolbarBtnTooltip="Aceptar"/>
                <botontoolbar:ToolbarBtn x:Name="btnLimpiar" Icono="fa_eraser" DiametroPx="35" Margin="5" toolbarBtnClick="btnLimpiar_toolbarBtnClick" ToolbarBtnTooltip="Limpiar mapa"/>
                <TextBlock x:Name="txtCoordenadas" VerticalAlignment="Center" Margin="10,0,10,0" />
            </StackPanel>
        </Grid>
        
    </Grid>
</UserControl>
