             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControlsSIZ.Captura"
             Background="White"
             mc:Ignorable="d" Height="25" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             >
