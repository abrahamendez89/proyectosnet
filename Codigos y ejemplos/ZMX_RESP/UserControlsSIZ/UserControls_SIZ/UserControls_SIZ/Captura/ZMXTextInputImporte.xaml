        <TextBox x:Name="txtValor" Margin="3,3.52,14.667,3.52" VerticalAlignment="Center" Background="Transparent" Text="" TextAlignment="Left" BorderThickness="0"></TextBox>
        <TextBox x:Name="txtValorFormateado" Margin="3,3.52,14.667,3.52" VerticalAlignment="Center" Background="Transparent" Text="" TextAlignment="Right" BorderThickness="0" IsReadOnly="True"></TextBox>
    </Grid>
</UserControl>
